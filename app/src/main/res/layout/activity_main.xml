<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>

    </data>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        tools:context=".MainActivity">

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textSize="30sp"
            android:alpha="1"
            android:shadowColor ="#008080"
            android:shadowRadius="1" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/infoTextView"
            android:enabled="false"
            android:gravity="bottom"
            android:lines="2"
            android:maxLines="1"
            android:textSize="20sp"
            android:background="#50FFFFFF"/>

        <Button
            android:id="@+id/buttonSeven"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@id/editText"
            android:text="7"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonEight"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@id/editText"
            android:layout_toRightOf="@id/buttonSeven"
            android:text="8"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonNine"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@id/editText"
            android:layout_toRightOf="@id/buttonEight"
            android:text="9"
            android:textSize="20sp" />

        <Button
            android:id="@+id/buttonDivide"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_below="@id/editText"
            android:layout_toRightOf="@id/buttonNine"
            android:text="/"
            android:textSize="20sp"/>

        <Button
            android:id="@+id/buttonFour"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonSeven"
            android:text="4"/>

        <Button
            android:id="@+id/buttonFive"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonEight"
            android:layout_toRightOf="@id/buttonFour"
            android:text="5"/>

        <Button
            android:id="@+id/buttonSix"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonNine"
            android:layout_toRightOf="@id/buttonFive"
            android:text="6"/>

        <Button
            android:id="@+id/buttonMultiply"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonDivide"
            android:layout_toRightOf="@id/buttonSix"
            android:text="*"/>

        <Button
            android:id="@+id/buttonOne"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonFour"
            android:text="1"/>

        <Button
            android:id="@+id/buttonTwo"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonFive"
            android:layout_toRightOf="@id/buttonOne"
            android:text="2"/>
        
        <Button
            android:id="@+id/buttonThree"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonSix"
            android:layout_toRightOf="@id/buttonTwo"
            android:text="3"/>
        
        <Button
            android:id="@+id/buttonMinus"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonMultiply"
            android:layout_toRightOf="@id/buttonThree"
            android:text="-"/>

        <Button
            android:id="@+id/buttonDecimal"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonOne"
            android:text="."/>

        <Button
            android:id="@+id/buttonZero"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonTwo"
            android:layout_toRightOf="@id/buttonDecimal"
            android:text="0"/>

        <Button
            android:id="@+id/buttonEquals"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonThree"
            android:layout_toRightOf="@id/buttonZero"
            android:text="="/>

        <Button
            android:id="@+id/buttonPlus"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonMinus"
            android:layout_toRightOf="@id/buttonEquals"
            android:text="+"/>

        <Button
            android:id="@+id/buttonExponent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonDecimal"
            android:text="^" />

        <Button
            android:id="@+id/buttonClear"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:textSize="20sp"
            android:layout_below="@id/buttonPlus"
            android:layout_alignParentRight="true"
            android:text="C"/>

    </RelativeLayout>
</layout>